{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "lib": ["ES2019"],
        "sourceMap": true,
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node", 
        "skipLibCheck": true,    
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}